@using Web.ViewModels
<tr>
    <td class="bold big">
        @EventViewModel.Name
    </td>
    <td>
        @EventViewModel.EventType
    </td>
    <td>
        @EventViewModel.Date.ToLocalTime().Date.ToShortDateString()
    </td>
    <td>
        @EventViewModel.Venue
    </td>
    <td class="bold big">
        @EventViewModel.Capacity
    </td>
    <td class="bold big">
        @EventViewModel.Sold
    </td>
    <td>
        <SoldEdit Sold="EventViewModel.Sold" OnConfirmed="@OnSoldConfirmed"/>
    </td>
</tr>

@code {
    private void OnSoldConfirmed(int sold)
    {
        EventViewModel = EventViewModel with { Sold = sold };
        StateHasChanged();
    }

    [Parameter]
    public ListEventViewModel EventViewModel { get; set; }
}