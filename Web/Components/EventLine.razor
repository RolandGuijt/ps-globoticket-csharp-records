@using Web.ViewModels
<tr>
    <td class="bold big">
        @EventViewModel.Name
    </td>
    <td>
        @EventViewModel.EventType
    </td>
    <td>
        @EventViewModel.Date.ToLocalTime().Date.ToShortDateString()
    </td>
    <td>
        @EventViewModel.Venue
    </td>
    <td class="bold big">
        @EventViewModel.Capacity
    </td>
    <td class="bold big">
        @EventViewModel.Sold
    </td>
    <td>
        <SoldEdit Event="EventViewModel" Parent="@this"/>
    </td>
</tr>

@code {
    [Parameter]
    public ListEventViewModel EventViewModel { get; set; }

    [Parameter]
    public Pages.Index Parent { get; set; }

    public void RefreshState()
    {
        StateHasChanged();
    }
}