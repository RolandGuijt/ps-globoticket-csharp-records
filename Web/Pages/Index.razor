@page "/"
@using Web.Mappers
@using Web.ViewModels
@using global::Shared.Dtos
@inject HttpClient HttpClient
@inject EventMapper EventMapper

<div class="container">
    @if (_events == null)
    {
        <div>No events were found.</div>
    }
    else
    {
        <table class="table">
            <thead>
            <tr class="columnHeader">
                <th>NAME</th>
                <th>TYPE</th>
                <th>DATE</th>
                <th>VENUE</th>
                <th>CAPACITY</th>
                <th>SOLD</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var eventObject in _events)
            {
                <EventLine EventViewModel="@eventObject"></EventLine>
            }
            <tr>
                <td>
                    <a class="btn-primary" type="button" href="/addnew">ADD</a>
                </td>
            </tr>
            </tbody>
        </table>
    }
</div>

@code
{
    IEnumerable<EventViewModel> _events;

    protected override async void OnInitialized()
    {
        var eventDtos = await HttpClient.GetFromJsonAsync<EventDto[]>("/event");
        _events = eventDtos.Select(d => EventMapper.ConvertDtoToViewModel(d));
        StateHasChanged();
    }
}